{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>andrzejressel/renovate-config//rust/updateToolchain",
    ":automergeMajor"
  ],
  "prConcurrentLimit": 1,
  "prHourlyLimit": 0,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": true
    },
    { 
      "matchPackageNames": [
        "wasmtime",
        "wasmtime-*" 
      ],
      "groupName": "wasmtime"
    },
    { 
      "matchPackageNames": "^wit-bindgen*",
      "groupName": "wit-bindgen"
    },
    { 
      "matchPackageNames": "^rmp*",
      "groupName": "rmp"
    },
    {
      "matchPackageNames": [
        "wit-component",
        "wit-parser",
        "wasmparser",
        "wasmprinter"
      ],
      "groupName": "wasm-tools"
    },
    {
      "matchPackageNames": [
        "wit-bindgen",
        "wit-bindgen-rt"
      ],
      "groupName": "wit-bindgen"
    },
    {
      "matchPackageNames": [
        "mkdocs-material",
        "squidfunk/mkdocs-material"
      ],
      "groupName": "mkdocs-material"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _VERSION variables in justfile",
      "fileMatch": ["(^|/|\\.)justfile"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?_VERSION := \"(?<currentValue>.+?)\"\\s"
      ]
    }
  ]
}
